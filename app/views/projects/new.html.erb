<h1>Create Project</h1>

<div class='well'>
  <%= form_for @project do |f| %>
    <div class='control-form'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class='control-form'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <%= f.submit 'Create Project' %>
  <% end %>
</div>